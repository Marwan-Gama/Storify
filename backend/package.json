{
  "name": "cloud-storage-backend",
  "version": "1.0.0",
  "description": "Backend API for Cloud File Storage System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:file-ops": "jest --testPathPattern=tests/e2e/complete-file-operations.e2e.test.js --testTimeout=300000 --verbose --detectOpenHandles --forceExit",
    "test:file-ops:coverage": "jest --testPathPattern=tests/e2e/complete-file-operations.e2e.test.js --testTimeout=300000 --verbose --coverage --detectOpenHandles --forceExit",
    "test:file-ops:watch": "jest --testPathPattern=tests/e2e/complete-file-operations.e2e.test.js --testTimeout=300000 --verbose --watch --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:s3": "node scripts/testS3.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "db:test:setup": "NODE_ENV=test sequelize-cli db:create && NODE_ENV=test sequelize-cli db:migrate",
    "db:test:teardown": "NODE_ENV=test sequelize-cli db:drop",
    "seed:user": "node scripts/seedUser.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "docs:serve": "swagger-ui-serve swagger.json"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "aws-s3",
    "jwt",
    "file-storage",
    "cloud-storage",
    "api"
  ],
  "author": "Cloud Storage Team",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.1",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "file-type": "^18.7.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "sequelize": "^6.35.1",
    "sequelize-cli": "^6.6.2",
    "sharp": "^0.32.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.16",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "faker": "^6.6.6",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mock-aws-s3": "^4.0.2",
    "nock": "^13.3.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.3",
    "sinon": "^17.0.1",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "plugins": [
      "jest",
      "node"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 2
  }
}
